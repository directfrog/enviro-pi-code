WindowManager:
	TextEnterWindow:
	ResultsWindow:



<TextEnterWindow>:
	name: 'first'

	canvas.before:
		Color:
			rgba: 60/255, 188/255, 66/255, 1
		Rectangle:
			pos: self.pos
			size: self.size

	FloatLayout:
		Label:
			text: 'Main ingredient:'
			font_size: 32
			bold: True 
			pos_hint: {'x':0, 'y':0.4}

		TextInput:
			id: main_ingred
			pos_hint: {'x':0.4, 'y':0.78}
			size_hint: (0.2, 0.05)

		Label:
			text: 'Any other ingredients:'
			font_size: 32
			bold: True 
			pos_hint: {'x':0, 'y':0.13}

		TextInput:
			id: other_ingred
			pos_hint: {'x':0.36, 'y':0.45}
			size_hint: (0.3, 0.1)

	

		Button:
			size_hint: (0.12, 0.16)
			background_color: (0, 0, 0, 0)
			pos_hint: {'x':0.45, 'y':0.07}

			on_press: root.button_on()
			on_release: root.button_off()
			on_release: app.root.current = 'second'


			Image: 
				id: button_image
				source: 'button2.png'
				center_x: self.parent.center_x
				center_y: self.parent.center_y


<ResultsWindow>
	name: 'second'

	canvas.before:
		Color:
			rgba: 60/255, 188/255, 66/255, 1
		Rectangle:
			pos: self.pos
			size: self.size

	FloatLayout:
		




